{
  "name": "fitness-tracker",
  "version": "1.0.0",
  "description": "A fitness tracker application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "tsc",
    "build:frontend": "webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "frontend": "lite-server --baseDir=\"public\"",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend\"",
    "dev:react": "webpack serve --mode development",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run dev:react\"",
    "serve": "npm run build && npm start"
  },
  "keywords": [
    "fitness",
    "tracker",
    "typescript",
    "express",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^9.1.2",
    "lite-server": "^2.6.1",
    "nodemon": "^3.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  }
}
